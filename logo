def colors = ['yellow']
(0).each { index ->
star( cx: 600 + (index*110), cy: 250, or: 200, ir: 60, borderColor: 'yellow',             
count: 5+index, fill: colors[index] )
}
antialias on
xpath( borderColor: 'darkBlue' ){
textStroke( text: 'Introduction to Programming and Problem Solving' )
xmoveTo( x: 115, y: 500 )
xcurveTo( x1:  1000, y1:  500, x2: 500, y2:  50, x3: 200, y3: 170 )
xcurveTo( x1: 300, y1: 230, x2: 350, y2: 230, x3: 350, y3: 170 )
transformations { scale(x: 4, y: 0.5) }
}